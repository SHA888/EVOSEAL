[Unit]
Description=EVOSEAL Continuous Runner
After=network.target

[Service]
Type=simple
User=kade
WorkingDirectory=/home/kade/EVOSEAL
ExecStart=/home/kade/EVOSEAL/scripts/auto_evolve_and_push.sh 10 ./tasks/default_task.json
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
