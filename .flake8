[flake8]
max-line-length = 88
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    *.egg-info,
    openevolve,
    tests,
    examples,
    scripts/test_*.py,
    scripts/provider_cli.py
ignore = 
    E203,
    E501,
    W503,
    F401,
    F841
per-file-ignores =
    __init__.py:F401
    **/test_*.py:F401,F841
    **/conftest.py:F401,F841
max-complexity = 15
